@model ComponentViewModel

@inject ArticlePagePageTemplateService Service

@{
    var templateModel = await Service.GetTemplateModel();
    ViewBag.Title = templateModel.Title;
}

<div>
    <h1>
        @templateModel.Title
    </h1>
    <p>
        @templateModel.Text
    </p>
</div>

@section styles {
    <page-builder-styles/>
}
@section scripts {
    <page-builder-scripts/>
}