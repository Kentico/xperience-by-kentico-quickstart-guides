@model TrainingGuides.Web.Features.LandingPages.Widgets.CallToAction.CallToActionWidgetViewModel

@if (Model == null || Model.IsMisconfigured)
{
    <tg-page-builder-content>
        <tg-configure-widget-instructions />
    </tg-page-builder-content>
    
    return;
}

@if (Model != null)
{
    <div class="text-center">
        <a href="@Model.Url" class="btn tg-btn-secondary text-uppercase my-4" target="@(Model.OpenInNewTab ? "_blank" : "")"
            data-id="@Model.Identifier" download="@Model.IsDownload">
            @Model.Text
        </a>
    </div>
}
